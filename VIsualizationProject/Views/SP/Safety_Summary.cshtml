<style>
    body {
        background: #f2f4f6;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .sidebar {
        height: calc(100vh - 64px);
        overflow-y: auto;
        width: 260px;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        color: #222246;
