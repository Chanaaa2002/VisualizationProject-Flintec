        margin-top: 64px;
        border-right: 1px solid #e5e5e5;
        box-shadow: 1px 0 6px rgba(0,0,0,0.03);
    }

    .dropdown-list {
        max-height: 600px;
        overflow-y: auto;
    }

    .sidebar .sidebar-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 20px 18px 8px 22px;
        font-size: 1.25rem;
        font-weight: 700;
        letter-spacing: 1px;
        background: #fff;
        color: #222246;
        border-bottom: 1px solid #f4f4f6;
    }

    .sidebar .dropdown-group {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .sidebar .dropdown {
        margin: 0 0 2px 0;
    }

    .sidebar .dropdown-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 20px 14px 18px;
        cursor: pointer;
        font-size: 1.11rem;
        font-weight: 500;
        color: #222246;
        background: #fff;
        border-radius: 10px;
        border: 1px solid transparent;
        transition: background 0.15s, border 0.15s, color 0.15s;
    }

    .sidebar .dropdown-header:hover,
    .sidebar .dropdown.open .dropdown-header {
        background: #222246;
        color: #fff;
        border: 1px solid #222246;
    }

    .sidebar .dropdown-list {
        background: #e8edf2;
        border-radius: 0 0 10px 10px;
        padding: 10px 0 6px 0;
        display: none;
        flex-direction: column;
        gap: 2px;
    }

    .sidebar .dropdown.open .dropdown-list {
        display: flex;
    }

    .sidebar .dropdown-list a {
        padding: 7px 28px;
        color: #222246;
        text-decoration: none;
        font-size: 1.04rem;
        border-radius: 4px;
        font-weight: 500;
        transition: background 0.17s;
        width: 100%;
        box-sizing: border-box;
    }

    .sidebar .dropdown-list a:hover {
        background: #d3dbe7;
    }

    .top-navbar {
        width: 100%;
        height: 64px;
        background: #222246;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1050;
        box-shadow: 0 2px 6px rgba(0,0,0,0.04);
        padding: 0 32px;
    }

    .top-navbar .navbar-brand {
        font-size: 1.6rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: #fff;
        text-decoration: none;
    }

    .top-navbar .navbar-links {
        display: flex;
        gap: 32px;
        align-items: center;
    }

    .top-navbar .navbar-links a {
        color: #fff;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 500;
        transition: color 0.2s;
    }

    .top-navbar .navbar-links a:hover {
        color: #ffd700;
    }

    .container-announcements {
        margin-top: 50px;
        margin-left: 190px;
        padding: 32px;
        width: calc(100vw - 260px);
        max-width: 1200px;
        min-width: 350px;
        min-height: calc(100vh - 80px);
        box-sizing: border-box;
        transition: margin-left 0.3s, width 0.3s;
    }

    .announcements-header {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.07);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 32px 38px 28px 38px;
        margin-bottom: 18px;
    }

    .header-titles h1 {
        font-size: 1.6rem;
        font-weight: 700;
        color: #222246;
        margin: 0 0 10px 0;
    }

    .header-titles .breadcrumb {
        font-size: 1.1rem;
        color: #616176;
        font-weight: 500;
    }

    .header-titles .breadcrumb a {
        color: #2f38e6;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.13s;
    }

    .header-titles .breadcrumb a:hover {
        color: #1a2163;
        text-decoration: none;
    }

    .add-announcement-btn {
        background: #000;
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 14px 32px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.18s, color 0.18s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

    .add-announcement-btn:hover {
        background: #333;
    }

    .announcements-main {
        background: #f5f6f8;
        border-radius: 15px;
        padding: 28px 20px 38px 14px;
        box-shadow: 0 1px 8px rgba(0,0,0,0.05);
    }

    .announcements-main h2 {
        text-align: center;
        color: #262654;
        font-size: 1.7rem;
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 28px;
    }

    .announcements-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 auto 36px auto;
        font-size: 1.1rem;
        background: #fff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 1px 8px rgba(0,0,0,0.05);
    }

    .announcements-table thead tr {
        background: #ffa600;
        color: #fff;
    }

    .announcements-table th, .announcements-table td {
        padding: 9px 22px;
        text-align: left;
    }

    .announcements-table th {
        font-weight: 500;
        font-size: 0.9rem;
        letter-spacing: 1px;
        border-bottom: 2px solid #fff2d6;
    }

    .announcements-table tbody tr:nth-child(even) {
        background: #f4f6fa;
    }

    .announcements-table tbody tr:nth-child(odd) {
        background: #fdfcff;
    }

    .announcements-table td {
        font-weight: 400;
        font-size: 1.0rem;
        color: #2a2a3a;
        border-bottom: 1px solid #e7e7ef;
    }

    .announcements-table td:last-child,
    .announcements-table th:last-child {
        text-align: center;
    }

    .icon-btn {
        background: none;
        border: none;
        cursor: pointer;
        outline: none;
        padding: 0;
    }

    .top-navbar .icon-btn {
        margin-right: 24px;
        margin-left: 12px;
    }

    .custom-hamburger-icon {
        width: 48px;
        height: 48px;
        background: #f5f6f6;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 1px 6px rgba(0,0,0,0.10);
    }

    .custom-hamburger-icon-inner {
        width: 32px;
        height: 32px;
        background: #f6f7f7;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 0 0 transparent;
        position: relative;
    }

    .custom-hamburger-bar {
        width: 24px;
        height: 5px;
        background: #23224a;
        border-radius: 3px;
        margin: 3px 0;
    }

    media (max-width: 900px) {
        sidebar

    {
        position: static;
        width: 100%;
        height: auto;
        box-shadow: none;
        border-right: none;
        padding-top: 0;
    }

    .container-announcements {
        margin-left: 0;
        width: 100vw;
        padding: 10px;
    }

    media (max-width: 700px) {
        announcements-header

    {
        flex-direction: column;
        align-items: flex-start;
        padding: 10px 10px;
    }

    .announcements-main {
        padding: 2px 2px 24px 2px;
    }

    .announcements-table th, .announcements-table td {
        padding: 10px 6px;
        font-size: 1rem;
    }

    .announcements-table-yellow thead tr {
        background: #d2ad0e;
        color: #fff;
    }

    .announcements-table-yellow th {
        font-weight: 700;
        font-size: 1.11rem;
        letter-spacing: 1px;
        border-bottom: 2px solid #fff2d6;
        text-align: left;
    }

    .announcements-table-yellow td {
        font-weight: 500;
        color: #222246;
        border-bottom: 1px solid #e7e7ef;
        background: #f4f6f8;
    }

    .announcements-table-yellow td,
    .announcements-table-yellow th {
        padding: 16px 18px;
        text-align: left;
    }

    .announcements-table-yellow .edit-link {
        color: #1561e7;
        text-decoration: underline;
        font-weight: 700;
        cursor: pointer;
    }

    .announcements-table-yellow .delete-link {
        color: #e01b1b;
        text-decoration: underline;
        font-weight: 700;
        cursor: pointer;
    }
</style>

