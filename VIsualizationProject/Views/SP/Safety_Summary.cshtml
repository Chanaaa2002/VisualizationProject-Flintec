<script>
    document.querySelectorAll('.dropdown').forEach(function (dropdown) {
        const header = dropdown.querySelector('.dropdown-header');
        header.addEventListener('click', function () {
            dropdown.classList.toggle('open');
        });
    });

    const sidebar = document.getElementById('mainSidebar');
    const sidebarHideBtn = document.getElementById('sidebarHideBtn');

    let sidebarVisible = true;


    sidebarHideBtn.addEventListener('click', function () {
        if (sidebarVisible) {
            sidebar.style.display = 'none';
            document.querySelector('.container-announcements').style.marginLeft = '0';
            document.querySelector('.container-announcements').style.width = '100vw';
        } else {
            sidebar.style.display = 'block';
            document.querySelector('.container-announcements').style.marginLeft = '190px';
            document.querySelector('.container-announcements').style.width = 'calc(100vw - 260px)';
        }
        sidebarVisible = !sidebarVisible;
    });
</script>

