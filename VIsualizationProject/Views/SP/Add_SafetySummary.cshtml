<div class="main-content-wrapper" id="mainContentWrapper">
    <div class="main-content" id="mainContent">
        
        <div class="breadcrumb-card">
            <div class="section-title">Safety Summary</div>
            <div class="breadcrumb">
                SP KGG &gt; <a href="#">Safety Summary</a> &gt; Add
            </div>
        </div>
        <div class="form-card">
            <h2>Add Safety Summary</h2>
            <form>
                <div class="form-group">
                    <label for="date">Injury Date</label>
                    <input type="date" id="date" name="date" placeholder="dd-MM-yyyy" required />
                </div>
                <div class="form-group">
                    <label for="announcement">Element Type</label>
                    <select id="element-type" class="injury-select">
                        <option value="incident">incident</option>
                        <option value="near_miss">First aid incident</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="announcement">Responsibility Area Supervisor</label>
                    <input type="text" id="responsibility-supervisor" class="injury-input" />
                </div>
                <div class="form-group">
                    <label for="announcement">Injury Description</label>
                    <input type="text" id="responsibility-supervisor" class="injury-input" />
                </div>
                <div class="button-row">
                    <button class="black-btn" type="submit">Create</button>
                    <button class="black-btn" type="button" onclick="window.history.back();">Go Back</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const sidebar = document.getElementById('mySidebar');
    const hamburger = document.getElementById('hamburgerMenu');
    const mainContentWrapper = document.getElementById('mainContentWrapper');
    let collapsed = false;

    function setSidebarCollapsed(collapse) {
        collapsed = collapse;
        sidebar.classList.toggle('collapsed', collapsed);
        if (collapsed) {
            mainContentWrapper.style.marginLeft = "0";
        } else {
            mainContentWrapper.style.marginLeft = "270px";
        }
    }
    hamburger.addEventListener('click', function () {
        setSidebarCollapsed(!collapsed);
    });

    document.querySelectorAll('.dropdown').forEach(function (dropdown) {
        const header = dropdown.querySelector('.dropdown-header');
        header.addEventListener('click', function () {
            dropdown.classList.toggle('open');
        });
    });

    window.addEventListener('DOMContentLoaded', function () {
        if (window.innerWidth <= 800) {
            setSidebarCollapsed(true);
        }
    });

    window.addEventListener('resize', function () {
        if (window.innerWidth <= 800) {
            setSidebarCollapsed(true);
        } else if (!collapsed) {
            setSidebarCollapsed(false);
        }
    });

    document.getElementById('safetySummaryBtn').addEventListener('click', function () {
        window.location.href = '/SP/AddSafetySummary'; 
    });
    document.getElementById('safety-summary-link').addEventListener('click', function (e) {
        e.preventDefault();
        window.location.href = '/SP/AddSafetySummary'; 
    });
</script>