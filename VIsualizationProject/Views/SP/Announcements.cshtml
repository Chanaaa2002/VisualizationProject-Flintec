    }

    .switch-off {
        color: #e01b1b;
        font-weight: 700;
        cursor: pointer;
        text-decoration: underline;
    }

    media (max-width: 700px) {
        .announcements-header

    {
        flex-direction: column;
        align-items: flex-start;
        padding: 20px 10px;
    }

    .announcements-main {
        padding: 16px 2px 24px 2px;
    }

    .announcements-table th, .announcements-table td {
        padding: 10px 6px;
        font-size: 1rem;
    }
