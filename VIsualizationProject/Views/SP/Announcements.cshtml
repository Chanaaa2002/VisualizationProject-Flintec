<style>
    /* Top Navigation Bar Styles */
    .top-navbar {
        width: 100%;
        height: 64px;
        background: #222246;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1050;
        box-shadow: 0 2px 6px rgba(0,0,0,0.04);
        padding: 0 32px;
    }

        .top-navbar .navbar-brand {
            font-size: 1.65rem;
            font-weight: 700;
            letter-spacing: 1px;
            color: #fff;
            text-decoration: none;
        }

        .top-navbar .navbar-links {
            display: flex;
            gap: 32px;
            align-items: center;
        }

            .top-navbar .navbar-links a {
                color: #fff;
                text-decoration: none;
                font-size: 1.12rem;
                font-weight: 500;
                transition: color 0.2s;
            }

                .top-navbar .navbar-links a:hover,
                .top-navbar .navbar-links .active {
                    color: #ffd700;
                }

    .hamburger-btn {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8fafa;
        border-radius: 12px;
        border: 1px solid #e2e4e6;
        cursor: pointer;
        margin-right: 18px;
        box-shadow: 0 0 0 0 transparent;
        transition: background 0.2s, box-shadow 0.2s;
    }

        .hamburger-btn:hover {
            background: #f0f0f0;
            box-shadow: 0 2px 8px rgba(20,20,20,0.06);
        }

    .hamburger-icon {
        width: 28px;
        height: 28px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
    }

        .hamburger-icon span {
            display: block;
            height: 4px;
            width: 24px;
            background: #222246;
            border-radius: 2px;
            transition: all 0.2s;
        }

    /* Sidebar styles */
    .sidebar {
        height: 100vh;
        width: 260px;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        color: #222246;
        overflow-x: hidden;
        transition: width 0.3s;
        z-index: 1000;
        margin-top: 64px;
        border-right: 1px solid #e5e5e5;
        box-shadow: 1px 0 6px rgba(0,0,0,0.03);
    }

        .sidebar.collapsed {
            width: 0 !important;
            min-width: 0 !important;
            overflow: hidden !important;
            border: none;
            box-shadow: none;
            padding: 0;
        }

        .sidebar .sidebar-header {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 20px 18px 8px 22px;
            font-size: 1.25rem;
            font-weight: 700;
            letter-spacing: 1px;
            background: #fff;
            color: #222246;
            transition: opacity 0.3s;
            white-space: nowrap;
            border-bottom: 1px solid #f4f4f6;
        }

        .sidebar.collapsed .sidebar-header span {
            display: none;
        }

        .sidebar .sidebar-header .sidebar-home-icon {
            font-size: 1.35rem;
            color: #222246;
            margin-right: 3px;
        }
        /* Dropdown group styles */
        .sidebar .dropdown-group {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .sidebar .dropdown {
            background: #fff;
            border-radius: 10px;
            margin: 0 0 2px 0;
            padding: 0;
        }

        .sidebar .dropdown-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 14px 20px 14px 18px;
            cursor: pointer;
            user-select: none;
            font-size: 1.11rem;
            font-weight: 500;
            color: #222246;
            border-radius: 10px;
            border: 1px solid transparent;
            transition: background 0.15s, border 0.15s, color 0.15s;
            background: #fff;
        }

            .sidebar .dropdown-header .dropdown-icon-svg {
                width: 26px;
                height: 26px;
                margin-right: 18px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .sidebar .dropdown-header .dropdown-header-text {
                flex: 1;
            }

            .sidebar .dropdown-header .arrow {
                font-size: 1.3rem;
                color: #222246;
                transition: transform 0.2s;
            }

        .sidebar .dropdown.open .dropdown-header {
            background: #222246;
            color: #fff;
            border: 1px solid #222246;
        }

            .sidebar .dropdown.open .dropdown-header .arrow {
                color: #fff;
            }

            .sidebar .dropdown.open .dropdown-header .dropdown-icon-svg svg rect,
            .sidebar .dropdown.open .dropdown-header .dropdown-icon-svg svg line,
            .sidebar .dropdown.open .dropdown-header .dropdown-icon-svg svg circle {
                stroke: #fff !important;
                fill: #fff !important;
            }

            .sidebar .dropdown.open .dropdown-header .dropdown-header-text {
                color: #fff;
            }

            .sidebar .dropdown.open .dropdown-header .arrow {
                transform: rotate(-180deg);
            }
        /* Submenu (dropdown-list) FULL WIDTH */
        .sidebar .dropdown-list {
            background: #e8edf2;
            border-radius: 0 0 10px 10px;
            padding: 12px 0 8px 0;
            display: none;
            flex-direction: column;
            gap: 3px;
            /* Make width 100% and align left with parent dropdown */
            width: 100%;
            min-width: 0;
            margin-left: 0;
            box-sizing: border-box;
        }

        .sidebar .dropdown.open .dropdown-list {
            display: flex;
        }

        .sidebar .dropdown-list a {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 7px 28px;
            color: #222246;
            text-decoration: none;
            font-size: 1.04rem;
            border-radius: 4px;
            font-weight: 500;
            transition: background 0.17s;
            width: 100%;
            box-sizing: border-box;
            word-break: break-word;
            white-space: normal;
        }

            .sidebar .dropdown-list a:hover {
                background: #d3dbe7;
            }

        .sidebar.collapsed .dropdown-header span,
        .sidebar.collapsed .dropdown-header .dropdown-header-text {
            display: none;
        }

        .sidebar.collapsed .dropdown-list {
            display: none !important;
        }

        .sidebar.collapsed .dropdown-header .dropdown-icon-svg,
        .sidebar.collapsed .dropdown-header .arrow {
            margin: 0;
        }

    .main-content {
